<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new Object"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:id="@+id/backto1"
        android:background="#00FFFFFF"
        android:layout_marginTop="@dimen/_10ssp"
        android:layout_marginLeft="@dimen/_10ssp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the name of object : "
        android:layout_below="@id/backto1"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textSize="@dimen/_17sdp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="@dimen/_8sdp"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/nametext"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_37sdp"
        android:layout_below="@id/backto1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:textColor="@color/black"
        android:background="@drawable/plus_button"
        android:gravity="center"
        android:text="qweeeeerty"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set the Location of object : "
        android:layout_below="@id/nametext"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textSize="@dimen/_17sdp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="60dp"
        />

    <EditText
        android:id="@+id/loctext"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nametext"
        android:hint=" Note :Location provided is not accurate \n Customize location as per needed "
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:textColor="@color/black"
        android:textColorHint="#C4474747"
        android:background="@drawable/plus_button"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:gravity="top"
        android:lines="5"
        android:textStyle="bold"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loc"
        android:layout_width="420dp"
        android:layout_height="60dp"
        android:layout_below="@id/nametext"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/plus_button"
        android:text="click to set the Location of object"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="23dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/loc"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/plus_button"
        android:text="Create this object"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wave"
        android:layout_marginTop="700dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="900dp"
        android:background="#000b76"
        />
</RelativeLayout>